{
  "name": "grile-admitere-timisoara-biologie",
  "version": "1.0.0",
  "description": "Grile Admitere Timisoara Biologie 2024",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "debug-start": "electron . --enable-logging",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "copy-build": "node copy-build.js",
    "fix-build": "node check-react-compatibility.js",
    "windows-build": "node windows-build.js",
    "build-windows": "electron-builder --win --x64 --publish never",
    "build-portable": "electron-builder --win portable --x64 --publish never",
    "build-all": "npm run copy-build && npm run fix-build && npm run build-portable"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.3.0"
  },
  "build": {
    "appId": "com.grileadmitere.biologie",
    "productName": "Grile Admitere Timisoara Biologie 2024",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["portable", "nsis"]
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "app/public",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "asarUnpack": [],
    "artifactName": "${productName}-${version}.${ext}"
  }
}
